{
    "name": "Slugcat",
    "description": "You are slightly smaller than normal.",
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:base 0.75 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:motion 1.33 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:block_reach 1.33 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:entity_reach 1.33 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale persist set true @s"
            }
        ]
    },
    "execute_chosen_when_orb": true,
    "entity_action_lost": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:base 1 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:motion 1 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:block_reach 1 @s"
            },
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:entity_reach 1 @s"
            }
        ]
    }
}